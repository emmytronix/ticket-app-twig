<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TicketFlow - Ticket Management System{% endblock %}</title>
    <meta name="description" content="Manage your support tickets efficiently with TicketFlow">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .toast {
            animation: slideIn 0.3s ease-out;
        }
        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body class="bg-gray-50">
    {% if error %}
    <div id="toast" class="toast fixed top-4 right-4 z-50 px-6 py-3 rounded-lg shadow-lg text-white bg-red-500">
        <div class="flex items-center gap-2">
            <span>{{ error }}</span>
            <button onclick="document.getElementById('toast').remove()" class="hover:opacity-80">✕</button>
        </div>
    </div>
    <script>
        setTimeout(() => {
            const toast = document.getElementById('toast');
            if (toast) toast.remove();
        }, 3000);
    </script>
    {% endif %}

    {% if success %}
    <div id="toast" class="toast fixed top-4 right-4 z-50 px-6 py-3 rounded-lg shadow-lg text-white bg-green-500">
        <div class="flex items-center gap-2">
            <span>{{ success }}</span>
            <button onclick="document.getElementById('toast').remove()" class="hover:opacity-80">✕</button>
        </div>
    </div>
    <script>
        setTimeout(() => {
            const toast = document.getElementById('toast');
            if (toast) toast.remove();
        }, 3000);
    </script>
    {% endif %}

    {% block content %}{% endblock %}
</body>
</html>