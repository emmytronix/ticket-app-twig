{% extends "layout.html.twig" %}

{% block title %}Dashboard - TicketFlow{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50 flex flex-col">
    <header class="bg-white shadow-sm">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-4 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-purple-600">TicketFlow</h1>
            <form method="POST" class="inline">
                <input type="hidden" name="action" value="logout">
                <button 
                    type="submit"
                    class="flex items-center gap-2 px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg transition"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    Logout
                </button>
            </form>
        </div>
    </header>

    <main class="flex-1 max-w-[1440px] w-full mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h2 class="text-3xl font-bold mb-8 text-gray-800">Dashboard</h2>
        
        {% set total_tickets = tickets|length %}
        {% set open_tickets = tickets|filter(t => t.status == 'open')|length %}
        {% set in_progress_tickets = tickets|filter(t => t.status == 'in_progress')|length %}
        {% set closed_tickets = tickets|filter(t => t.status == 'closed')|length %}
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center text-white text-xl font-bold mb-3">
                    {{ total_tickets }}
                </div>
                <p class="text-gray-600 font-medium">Total Tickets</p>
            </div>
            
            <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center text-white text-xl font-bold mb-3">
                    {{ open_tickets }}
                </div>
                <p class="text-gray-600 font-medium">Open</p>
            </div>
            
            <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                <div class="w-12 h-12 bg-amber-500 rounded-lg flex items-center justify-center text-white text-xl font-bold mb-3">
                    {{ in_progress_tickets }}
                </div>
                <p class="text-gray-600 font-medium">In Progress</p>
            </div>
            
            <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition">
                <div class="w-12 h-12 bg-gray-500 rounded-lg flex items-center justify-center text-white text-xl font-bold mb-3">
                    {{ closed_tickets }}
                </div>
                <p class="text-gray-600 font-medium">Closed</p>
            </div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-xl font-semibold mb-4 text-gray-800">Quick Actions</h3>
            <a href="index.php?page=tickets" class="inline-block px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 font-semibold transition">
                Manage Tickets
            </a>
        </div>
    </main>

    <footer class="bg-gray-800 text-white py-8 mt-auto">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <p>&copy; 2025 TicketFlow. All rights reserved.</p>
        </div>
    </footer>
</div>
{% endblock %}